@model MemberRegisterViewModel
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="login-form">
        <h4 class="login-title">New Customer</h4>
        <p><span class="font-weight-bold">I am a new customer</span></p>
        <div class="row">
            <div class="col-md-12 col-12 mb--15">
                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" class="mb-0 form-control" placeholder="Enter your full name">
                <span asp-validation-for="FullName"></span>

            </div>
            <div class="col-md-12 col-12 mb--15">
                <label asp-for="RegisterUserName">User Name</label>
                <input asp-for="RegisterUserName" class="mb-0 form-control" placeholder="Enter your user name">
                <span asp-validation-for="RegisterUserName"></span>

            </div>
            <div class="col-12 mb--20">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="mb-0 form-control" id="email" type="email" placeholder="Enter Your Email Address Here..">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="col-lg-6 mb--20">
                <label asp-for="RegisterPassword">Password</label>
                <input asp-for="RegisterPassword" class="mb-0 form-control" id="password" placeholder="Enter your password">
                <span asp-validation-for="RegisterPassword"></span>
            </div>
            <div class="col-lg-6 mb--20">
                <label asp-for="ConfirmPassword">Repeat Password</label>
                <input asp-for="ConfirmPassword" class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-outlined">Register</button>
            </div>
        </div>
    </div>
</form>